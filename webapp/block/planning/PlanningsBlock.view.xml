<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.evorait.evosuite.evoprep.block.planning.PlanningsBlockController" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:gnt2="sap.gantt.simple" xmlns:tnt="sap.tnt" xmlns:axistime="sap.gantt.axistime" xmlns:config="sap.gantt.config"
	xmlns:table="sap.ui.table">
	<gnt2:GanttChartContainer id="idPlanningGanttChartContainer" busy="{viewModel>/ganttSettings/busy}" enableCursorLine="false"
		enableTimeScrollSync="false" height="400px">
		<gnt2:toolbar>
			<gnt2:ContainerToolbar id="idGanttChartContainerToolbar" design="Auto" showBirdEyeButton="false" showLegendButton="false"
				class="gantt_toolbar">
				<gnt2:content>
					<Button text="{i18n>xbut.hideDependencies}" visible="{= ${user>/ENABLE_HIDE_DEPENDENCY} === 'X'}" press="onShowDependencies"/>
				</gnt2:content>
				<gnt2:legendContainer>
					<gnt2:LegendContainer></gnt2:LegendContainer>
				</gnt2:legendContainer>
			</gnt2:ContainerToolbar>
		</gnt2:toolbar>
		<gnt2:GanttChartWithTable id="idPlanningGanttChartTable" shapeSelectionMode="Single" shapePress="onShapePress" ghostAlignment="Start"
			adhocLineLayer="Bottom" nowLineInUTC="false" dragStart="onShapeDragStart" shapeDrop="onShapeDrop" shapeMouseEnter="onShapeMouseEnter" shapeResize="onShapeResize"
			shapeSelectionSettings="{color: '#808080', strokeWidth: 1, strokeDasharray: '5,2'}">
			<gnt2:axisTimeStrategy>
				<axistime:StepwiseZoomStrategy id="idPlanningGanttZoom" zoomLevels="3">
					<axistime:totalHorizon>
						<config:TimeHorizon startTime="{viewModel>/ganttSettings/sStartDate}" endTime="{viewModel>/ganttSettings/sEndDate}"/>
					</axistime:totalHorizon>
				</axistime:StepwiseZoomStrategy>
			</gnt2:axisTimeStrategy>
			<gnt2:table>
				<table:TreeTable id="idPlanningGanttTreeTable" selectionMode="Single" visibleRowCountMode="Auto" rowActionCount="2" threshold="10"
					enableColumnReordering="true" enableBusyIndicator="true" enableCellFilter="false" columnHeaderVisible="true" selectionBehavior="RowOnly"
					busyStateChanged="onBusyStateChanged"
					rows="{path: 'ganttModel>/data', parameters: { arrayNames: ['children'], numberOfExpandedLevels: 1, groupId: 'GanttTree'} }">
					<table:columns>
						<table:Column label="DESCRIPTION" name="DESCRIPTION" width="25rem" class="sapUiNoContentPadding">
							<table:customData>
								<core:CustomData key="p13nData" value='\{"columnKey": "DESCRIPTION", "leadingProperty": "DESCRIPTION"}'/>
							</table:customData>
							<table:template>
								<Text text="{ganttModel>DESCRIPTION}"/>
							</table:template>
						</table:Column>
					</table:columns>
					<table:extension>
						<OverflowToolbar>
							<content>
								<Button id="idExpandAll" icon="sap-icon://expand-all" press="onClickExpandCollapse" type="Transparent" tooltip="{i18n>xbut.expandAll}">
									<customData>
										<core:CustomData key="Function" value="EXPAND"/>
									</customData>
								</Button>
								<Button id="idCollapseAll" icon="sap-icon://collapse-all" press="onClickExpandCollapse" type="Transparent" tooltip="{i18n>xbut.collapseAll}">
									<customData>
										<core:CustomData key="Function" value="COLLAPSE"/>
									</customData>
								</Button>
								<ToolbarSpacer/>
							</content>
						</OverflowToolbar>
					</table:extension>
					<table:rowSettingsTemplate>
						<gnt2:GanttRowSettings rowId="{ganttModel>ObjectKey}"
							relationships="{path:'ganttModel>GanttHierarchyToDependency/results', templateShareable: 'true'}">
							<gnt2:shapes1>
								<core:Fragment fragmentName="com.evorait.evosuite.evoprep.view.fragments.Shapes" type="XML"/>
							</gnt2:shapes1>
							<gnt2:relationships>
								<core:Fragment fragmentName="com.evorait.evosuite.evoprep.view.fragments.Relationships" type="XML"/>
							</gnt2:relationships>
						</gnt2:GanttRowSettings>
					</table:rowSettingsTemplate>
				</table:TreeTable>
			</gnt2:table>
		</gnt2:GanttChartWithTable>
	</gnt2:GanttChartContainer>
</mvc:View>