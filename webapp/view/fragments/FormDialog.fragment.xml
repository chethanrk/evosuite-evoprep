<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:smartForm="sap.ui.comp.smartform">
	<Dialog id="FormDialogWrapper" class="sapUiTinyMargin" draggable="{viewModel>/dialog/draggable}" resizable="{viewModel>/dialog/resizable}"
		verticalScrolling="{viewModel>/dialog/verticalScrolling}" horizontalScrolling="{viewModel>/dialog/horizontalScrolling}"
		stretch="{viewModel>/dialog/stretch}">
		<content></content>
		<beginButton>
			<Button text="{i18n>xbtn.cancel}" press="onPressClose"/>
		</beginButton>
		<endButton>
			<Button id="formDialogSaveBtn" text="{i18n>xbtn.save}" type="Emphasized" press="onPressSave"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>